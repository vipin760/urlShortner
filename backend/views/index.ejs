<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
   <div class="contianer text-center col-md-6">
    <h1>URL Shrinker</h1>
    <form action="/shortUrl" method="post" class="my-4 form-inline">
        <label for="" class="sr-only">URL</label>
        <input type="url" name="fullUrl" id="fullUrl" class="form-control mr-2">
        <button type="submit" class="btn btn-success mt-2">Shrink</button>
    </form>
    <div class="row col-md-10 d-flex justify-content-center p-5">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrl.forEach((shortUrl)=>{ %>
                    <tr>
                        <td>
                            <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                        </td>
                        <td>
                            <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                        </td>
                        <td>
                            <a href="<%= shortUrl.clicks %>"><%= shortUrl.clicks%></a>
                        </td>
                    </tr>
                    <% }) %>
                
            </tbody>
        </table>
    </div>
   </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>